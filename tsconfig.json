{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"dom"
		],
		"sourceMap": true,
		"rootDir": "./",
		"strict": true,
		"jsx": "react",
		"jsxFactory": "vscpp",
		"jsxFragmentFactory": "vscppf",
		"allowJs": true,
		"checkJs": false,
		"moduleResolution": "Node16"
	},
	"include": [
		"src",
		"dist"
	],
	"exclude": [
		"esbuild.js",
		"out"
	]
}